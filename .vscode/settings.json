{
  "typescript.preferences.includePackageJsonAutoImports": "on",
  "files.associations": {
    "*.js": "javascript",
    "*.ts": "typescript"
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/coverage": true,
    "**/.git": true
  },
  "files.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/coverage": true
  },
  "typescript.suggest.autoImports": true,
  "javascript.suggest.autoImports": true,
  "eslint.workingDirectories": [
    "."
  ],
  "eslint.validate": [
    "javascript",
    "typescript"
  ],
  // Í∏∞Î≥∏ ÏóêÎîîÌÑ∞ ÏÑ§Ï†ï (Í∏ÄÎ°úÎ≤å ÏÑ§Ï†ïÍ≥º ÌÜµÏùº)
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.renderWhitespace": "boundary",
  "[javascript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "[typescript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  // Í∞úÎ∞ú ÏÑúÎ≤Ñ ÏÑ§Ï†ï
  "liveServer.settings.port": 5500,
  "liveServer.settings.root": "/dist",
  // ============================================================================
  // üìù TODO & COMMENTS - Ìï†Ïùº Î∞è Ï£ºÏÑù ÏÑ§Ï†ï (FE Í∞úÎ∞úÏûê ÏµúÏ†ÅÌôî)
  // ============================================================================
  // Todo Tree ÏÑ§Ï†ï (ÏÇ¨Ïù¥ÎìúÎ∞î Ï†ÑÏö©, Ìñ•ÏÉÅÎêú ÏãúÍ∞ÅÏ†Å Íµ¨Î∂Ñ)
  "todo-tree.general.tags": [
    "TODO",
    "FIXME",
    "BUG",
    "HACK",
    "NOTE",
    "REVIEW",
    "OPTIMIZE",
    "DEPRECATED",
    "REFACTOR",
    "COMPLEXITY",
    "TEST"
  ],
  "todo-tree.general.statusBar": "total",
  "todo-tree.general.statusBarClickBehaviour": "cycle",
  "todo-tree.highlights.enabled": true,
  "todo-tree.highlights.highlightDelay": 500,
  "todo-tree.highlights.customHighlight": {
    "TODO": {
      "icon": "checklist",
      "iconColour": "#FFA500",
      "foreground": "#FFA500",
      "type": "tag"
    },
    "FIXME": {
      "icon": "flame",
      "iconColour": "#FF4444",
      "foreground": "#FF4444",
      "type": "tag"
    },
    "BUG": {
      "icon": "bug",
      "iconColour": "#DC3545",
      "foreground": "#DC3545",
      "type": "tag"
    },
    "HACK": {
      "icon": "tools",
      "iconColour": "#FF8C00",
      "foreground": "#FF8C00",
      "type": "tag"
    },
    "NOTE": {
      "icon": "note",
      "iconColour": "#17A2B8",
      "foreground": "#17A2B8",
      "type": "tag"
    },
    "REVIEW": {
      "icon": "eye",
      "iconColour": "#9966CC",
      "foreground": "#9966CC",
      "type": "tag"
    },
    "OPTIMIZE": {
      "icon": "rocket",
      "iconColour": "#28A745",
      "foreground": "#28A745",
      "type": "tag"
    },
    "DEPRECATED": {
      "icon": "circle-slash",
      "iconColour": "#808080",
      "foreground": "#808080",
      "type": "tag"
    },
    "REFACTOR": {
      "icon": "gear",
      "iconColour": "#6F42C1",
      "foreground": "#6F42C1",
      "type": "tag"
    },
    "COMPLEXITY": {
      "icon": "graph",
      "iconColour": "#E83E8C",
      "foreground": "#E83E8C",
      "type": "tag"
    },
    "TEST": {
      "icon": "beaker",
      "iconColour": "#FD7E14",
      "foreground": "#FD7E14",
      "type": "tag"
    }
  },
  "todo-tree.tree.hideTreeWhenEmpty": false,
  "todo-tree.tree.showCountsInTree": true,
  "todo-tree.tree.labelFormat": "${tag} ${after}",
  "todo-tree.tree.disableCompactFolders": true,
  "todo-tree.filtering.excludeGlobs": [
    "**/node_modules/**",
    "**/dist/**",
    "**/build/**",
    "**/.git/**",
    "**/coverage/**"
  ],
  "todo-tree.filtering.includeGlobs": [
    "**/*.vue",
    "**/*.ts",
    "**/*.js",
    "**/*.tsx",
    "**/*.jsx",
    "**/*.scss",
    "**/*.css",
    "**/*.html"
  ],
